<% provide(:title, 'Add LBD Page') %>

<h1>Add LBD Page</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @lbd_page, url: company_lbd_page_path do |f| %>

      <%= render 'shared/error_messages', :mesg => @lbd_page %>

      <%= f.label :name  %>
      <%= f.text_field :name  %>
    
      <%= f.label :description  %>
      <%= f.text_area :description  %>


      <br/>
      <%= f.submit "Create LBD Page", class: "btn btn-large btn-primary"  %>

    <% end %>
  </div>
</div>